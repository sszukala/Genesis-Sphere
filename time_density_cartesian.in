<comment>
Time-Density Geometry model with cartesian coordinates
(Run this after rebuilding Athena with cartesian coordinates)
</comment>

<job>
  problem_id = time_density
  coord      = cartesian
  eos        = adiabatic
</job>

<mesh>
  nx1 = 64
  x1min = -1.0
  x1max = 1.0
  
  nx2 = 64
  x2min = -1.0
  x2max = 1.0
  
  nx3 = 1
  x3min = -0.1
  x3max = 0.1
  
  # Boundary conditions (try both options)
  ix1_bc = user
  ox1_bc = user
  ix2_bc = user
  ox2_bc = user
  ix3_bc = user
  ox3_bc = user
</mesh>

<time>
  cfl_number = 0.3
  tlim = 2.0
  integrator = vl2
  xorder = 2
  ncycle_out = 1
</time>

<hydro>
  gamma = 1.666667
</hydro>

<problem>
  alpha = 0.02    # dimension expansion parameter
  omega = 2.0     # projection factor parameter
  beta = 0.5      # temporal drag coefficient
  epsilon = 0.001 # singularity avoidance parameter
  pressure = 1.0  # initial pressure
</problem>
