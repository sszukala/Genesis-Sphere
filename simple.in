<comment>
Simple cartesian simulation with our time-density model
</comment>

<job>
  problem_id = time_density  # Using our custom time_density problem
  coord      = cartesian
  eos        = adiabatic
</job>

<mesh>
  nx1 = 64
  x1min = -1.0
  x1max = 1.0
  
  nx2 = 64
  x2min = -1.0
  x2max = 1.0
  
  nx3 = 1
  x3min = -0.1
  x3max = 0.1
  
  # Changed to periodic boundary conditions
  ix1_bc = periodic
  ox1_bc = periodic
  ix2_bc = periodic
  ox2_bc = periodic
  ix3_bc = periodic
  ox3_bc = periodic
</mesh>

<time>
  cfl_number = 0.3
  tlim = 1.0        # Time limit = 1.0
  integrator = vl2
  xorder = 2
  ncycle_out = 1
</time>

<output1>
  file_type  = vtk      # VTK output format
  variable   = prim     # write primitive variables
  dt         = 0.1      # time increment between outputs
</output1>

<hydro>
  gamma = 1.666667
</hydro>

<problem>
  alpha = 0.02    # dimension expansion parameter
  omega = 2.0     # projection factor parameter
  beta = 0.5      # temporal drag coefficient
  epsilon = 0.001 # singularity avoidance parameter
  pressure = 1.0  # initial pressure
</problem>
